{
  "expo": {
    "name": "ReFrog",
    "slug": "refrog",
    "version": "1.0.0",
    "scheme": "refrog",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a0a06"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.refrog.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a0a06"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./Xanh_Mono/XanhMono-Regular.ttf",
            "./Xanh_Mono/XanhMono-Italic.ttf"
          ]
        }
      ]
    ]
  }
}
